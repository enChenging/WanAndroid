<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:background="@color/viewBackground"
              android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/viewBackground"
            android:overScrollMode="never"
            android:scrollbars="none">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="14dp"
                    android:paddingBottom="14dp">

                <TextView
                        android:id="@+id/tv_no_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="@string/switch_photo_mode"
                        android:textColor="@color/textColorPrimary"
                        android:textSize="@dimen/default_text_size" />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@+id/tv_no_image"
                        android:text="@string/switch_no_photo_mode_summary"
                        android:layout_toLeftOf="@+id/sc_no_image"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="80dp"
                        android:textColor="@color/text_gray_light"
                        android:textSize="@dimen/text_notes" />

                <android.support.v7.widget.SwitchCompat
                        android:id="@+id/sc_no_image"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

            </RelativeLayout>

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="14dp"
                    android:paddingBottom="14dp">

                <TextView
                        android:id="@+id/tv_auto_night"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="@string/auto_night_mode"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/text_content" />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@+id/tv_auto_night"
                        android:text="@string/auto_night_mode_summary"
                        android:layout_toLeftOf="@+id/sc_tv_auto_night"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="80dp"
                        android:textColor="@color/text_gray_light"
                        android:textSize="@dimen/text_notes" />

                <android.support.v7.widget.SwitchCompat
                        android:id="@+id/sc_tv_auto_night"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

            </RelativeLayout>

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="14dp"
                    android:paddingBottom="14dp">

                <TextView
                        android:id="@+id/tv_top_summary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="@string/switch_show_top_title"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/text_content" />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@+id/tv_top_summary"
                        android:text="@string/switch_show_top_summary"
                        android:layout_toLeftOf="@+id/sc_top_summary"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="80dp"
                        android:textColor="@color/text_gray_light"
                        android:textSize="@dimen/text_notes" />

                <android.support.v7.widget.SwitchCompat
                        android:id="@+id/sc_top_summary"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

            </RelativeLayout>

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="14dp"
                    android:paddingBottom="14dp">

                <TextView
                        android:id="@+id/tv_bar_coloration_summary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="@string/nav_bar_coloration"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/text_content" />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@+id/tv_bar_coloration_summary"
                        android:text="@string/nav_bar_coloration_summary"
                        android:layout_toLeftOf="@+id/sc_bar_coloration_summary"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="80dp"
                        android:textColor="@color/text_gray_light"
                        android:textSize="@dimen/text_notes" />

                <android.support.v7.widget.SwitchCompat
                        android:id="@+id/sc_bar_coloration_summary"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

            </RelativeLayout>


            <LinearLayout
                    android:id="@+id/ll_cache"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp">

                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:singleLine="true"
                        android:text="清除缓存"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/text_content" />

                <TextView
                        android:id="@+id/tv_cache"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:singleLine="true"
                        android:text=""
                        tools:text="100MB"
                        android:textColor="@color/text_gray_light"
                        android:textSize="@dimen/text_notes" />

                <ImageView
                        android:layout_width="13dp"
                        android:layout_height="13dp"
                        android:rotation="180"
                        android:scaleType="fitCenter"
                        android:src="@mipmap/ic_back"
                        android:tint="@color/gray_light" />

            </LinearLayout>

            <LinearLayout
                    android:id="@+id/ll_update"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp">

                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:singleLine="true"
                        android:text="版本更新"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/text_content" />

                <TextView
                        android:id="@+id/tv_has_update"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:singleLine="true"
                        android:text=""
                        tools:text="已是最新版本"
                        android:textColor="@color/text_gray_light"
                        android:textSize="@dimen/text_notes" />

                <ImageView
                        android:layout_width="13dp"
                        android:layout_height="13dp"
                        android:rotation="180"
                        android:scaleType="fitCenter"
                        android:src="@mipmap/ic_back"
                        android:tint="@color/gray_light" />

            </LinearLayout>


        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>
</LinearLayout>
