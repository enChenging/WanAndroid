<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/viewBackground"
              android:orientation="vertical">

    <include layout="@layout/toolbar"/>

    <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/viewBackground"
            android:overScrollMode="never"
            android:scrollbars="none">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="14dp"
                    android:paddingBottom="14dp">

                <TextView
                        android:id="@+id/tv_top_summary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="@string/switch_show_top_title"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/textSize_content"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@+id/tv_top_summary"
                        android:text="@string/switch_show_top_summary"
                        android:layout_toLeftOf="@+id/sc_top_summary"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="80dp"
                        android:textColor="@color/text_gray_light"
                        android:textSize="@dimen/textSize_small"/>

                <android.support.v7.widget.SwitchCompat
                        android:id="@+id/sc_top_summary"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        android:theme="@style/SwitchStyle"
                />

            </RelativeLayout>

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="14dp"
                    android:paddingBottom="14dp">

                <TextView
                        android:id="@+id/tv_bar_coloration_summary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="@string/nav_bar_coloration"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/textSize_content"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@+id/tv_bar_coloration_summary"
                        android:text="@string/nav_bar_coloration_summary"
                        android:layout_toLeftOf="@+id/sc_bar_coloration_summary"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="80dp"
                        android:textColor="@color/text_gray_light"
                        android:textSize="@dimen/textSize_small"/>

                <android.support.v7.widget.SwitchCompat
                        android:id="@+id/sc_bar_coloration_summary"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        android:theme="@style/SwitchStyle"
                />

            </RelativeLayout>

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="14dp"
            >

                <TextView
                        android:id="@+id/tv_auto_night"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="@string/auto_night_mode"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/textSize_content"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@+id/tv_auto_night"
                        android:text="@string/auto_night_mode_subsummary"
                        android:layout_toLeftOf="@+id/sc_tv_auto_night"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="80dp"
                        android:textColor="@color/text_gray_light"
                        android:textSize="@dimen/textSize_small"/>

                <android.support.v7.widget.SwitchCompat
                        android:id="@+id/sc_tv_auto_night"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        android:theme="@style/SwitchStyle"
                />

            </RelativeLayout>


            <TextView
                    android:id="@+id/tv_time_notice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/auto_night_category"
                    android:textColor="@color/colorPrimary"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="14dp"

            />

            <RelativeLayout
                    android:id="@+id/rl_night_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="14dp"
                    android:clickable="false"
            >

                <TextView
                        android:id="@+id/tv_night_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="@string/auto_night_start"
                        android:textColor="@color/selector_auto_night_title"
                        android:textSize="@dimen/textSize_content"/>

                <TextView
                        android:id="@+id/tv_night_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@+id/tv_night_title"
                        android:text="22:00"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="80dp"
                        android:textColor="@color/selector_auto_night_text"
                        android:textSize="@dimen/textSize_small"/>

            </RelativeLayout>

            <RelativeLayout
                    android:id="@+id/rl_day_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="14dp"
                    android:clickable="false"
            >

                <TextView
                        android:id="@+id/tv_day_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="@string/auto_day_start"
                        android:textColor="@color/selector_auto_night_title"
                        android:textSize="@dimen/textSize_content"/>

                <TextView
                        android:id="@+id/tv_day_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@+id/tv_day_title"
                        android:text="06:00"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="80dp"
                        android:textColor="@color/selector_auto_night_text"
                        android:textSize="@dimen/textSize_small"/>

            </RelativeLayout>

            <RelativeLayout
                    android:id="@+id/rl_theme_color"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="14dp"
                    android:paddingBottom="14dp">

                <TextView
                        android:id="@+id/tv_theme_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="@string/choose_theme_color"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/textSize_content"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@+id/tv_theme_color"
                        android:text="@string/choose_theme_color_summary"
                        android:layout_toLeftOf="@+id/cv_theme_color"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="80dp"
                        android:textColor="@color/text_gray_light"
                        android:textSize="@dimen/textSize_small"/>


                <com.afollestad.materialdialogs.color.CircleView
                        android:id="@+id/cv_theme_color"
                        android:layout_width="34dp"
                        android:layout_height="34dp"
                        android:layout_marginRight="5dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        tools:ignore="ContentDescription"/>

            </RelativeLayout>


            <LinearLayout
                    android:id="@+id/ll_cache"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp">

                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:singleLine="true"
                        android:text="清除缓存"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/textSize_content"/>

                <TextView
                        android:id="@+id/tv_cache"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:singleLine="true"
                        android:text=""
                        tools:text="100MB"
                        android:textColor="@color/text_gray_light"
                        android:textSize="@dimen/textSize_small"/>

                <ImageView
                        android:layout_width="13dp"
                        android:layout_height="13dp"
                        android:rotation="180"
                        android:scaleType="fitCenter"
                        android:src="@mipmap/ic_back"
                        android:tint="@color/gray_light"/>

            </LinearLayout>

            <LinearLayout
                    android:id="@+id/ll_update"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp">

                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:singleLine="true"
                        android:text="版本更新"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/textSize_content"/>

                <TextView
                        android:id="@+id/tv_has_update"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:singleLine="true"
                        android:text=""
                        tools:text="已是最新版本"
                        android:textColor="@color/text_gray_light"
                        android:textSize="@dimen/textSize_small"/>

                <ImageView
                        android:layout_width="13dp"
                        android:layout_height="13dp"
                        android:rotation="180"
                        android:scaleType="fitCenter"
                        android:src="@mipmap/ic_back"
                        android:tint="@color/gray_light"/>

            </LinearLayout>


        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>
</LinearLayout>
